<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

<body>
    <%- include('partials/header') %>

    <main class="">

        <div class="col-12 col-md-10 mx-auto mt-3">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item"><a href="/movies">Peliculas</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Resultado de la Busqueda</li>
                        </ol>
                    </nav>

                    <div>
                      <form action="/movies/search" method=GET class="d-flex">
                        <input type="text" name="keyword" id="" class="form-control">
                        <button type="submit" class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></button>
                      </form>
                    </div>
                    
                    <a href="/movies/add" class="btn btn-outline-dark">Agregar Pelicula</a>

                </div>

                <div class="card-body">

                    <div class="table-responsive">
                        <% if (movies.length) { %>

                          <table class="table">
                            <thead>
                              <tr>
                                <th scope="col">Orden</th>
                                <th scope="col">Titulo</th>
                                <th scope="col">Rating</th>
                                <th scope="col">Premio</th>
                                <th scope="col">Género</th>
                                <th scope="col">Acciones</th>
                              </tr>
                            </thead>
                            <tbody>
                                <% movies.forEach(movie => { %>
                                
                                  <tr>
                
                                    <th scope="row"><%= movie.id %></th>
                                    <td><%= movie.title %></td>
                                    <td><%= movie.rating %></td>
                                    <td><%= movie.awards %></td>
                                    <td><%= movie.genre?.name %></td>
                
                                    <td>
                
                                          <div>
                                            <a href="/movies/detail/<%= movie.id %>" class="btn btn-outline-dark"><i class="fa-solid fa-eye"></i></a>
                                            <a href="/movies/edit/<%= movie.id %>" class="btn btn-outline-dark"><i class="fa-solid fa-pen-to-square"></i></a>
                                            <!-- Button trigger modal -->
<button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#movieModal<%= movie.id %>">
  <i class="fa-solid fa-trash"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="movieModal<%= movie.id %>" tabindex="-1" aria-labelledby="movieModal<%= movie.id %>Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="movieModal<%= movie.id %>Label">Cuidado</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>¿Estas Seguro que deseas eliminar la pelicula <b><%= movie.title %></b>? </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
        <form action="/movies/delete/<%= movie.id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-outline-danger">Eliminar</button>
        </form>
        
      </div>
    </div>
  </div>
</div>
                                            
                                          </div>
                
                                    </td>
                                                    
                                  </tr>
                
                                <% }) %>
                            </tbody>
                        </table>

                        <% }else { %>

                          <div class="alert alert-warning" role="alert">
                            No hay resultados de la busqueda en su BD.
                          </div>

                        <% } %>
                    </div>

                </div>
            </div>
        </div>
    
    </main>
    <%- include('partials/scripts') %>
</body>

</html>